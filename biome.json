{
    "root": true,
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true,
        "defaultBranch": "main"
    },
    "files": {
        "ignoreUnknown": true,
        "includes": [
            "**",
            "!!**/node_modules",
            "!**/*.generated.js",
            "!!**/dist"
        ]
    },
    "formatter": {
        "enabled": true,
        "attributePosition": "auto",
        "bracketSpacing": true,
        "formatWithErrors": true,
        "indentStyle": "tab",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 140,
        "useEditorconfig": true
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "arrowParentheses": "always",
            "attributePosition": "auto",
            "bracketSameLine": false,
            "bracketSpacing": true,
            "indentStyle": "tab",
            "indentWidth": 4,
            "jsxQuoteStyle": "double",
            "quoteStyle": "single",
            "quoteProperties": "asNeeded",
            "lineEnding": "lf",
            "lineWidth": 140,
            "semicolons": "always",
            "trailingCommas": "none"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noUselessFragments": "off"
            },
            "correctness": {
                "noUnusedImports": "error",
                "noUnusedVariables": "warn",
                "useExhaustiveDependencies": "warn"
            },
            "performance": {
                "noAccumulatingSpread": "off",
                "noBarrelFile": "off"
            },
            "style": {
                "noDefaultExport": "off",
                "noNonNullAssertion": "off",
                "useBlockStatements": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "off",
                "noAssignInExpressions": "off",
                "noExplicitAny": "warn",
                "noImportCycles": "error"
            }
        }
    }
}