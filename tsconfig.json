{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "jsx": "react-native",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": [
            "es6",
            "dom"
        ],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "index.ts",
        "lib/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}