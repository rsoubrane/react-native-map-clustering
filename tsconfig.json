{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"jsx": "react-native",
		"declaration": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": ["es6", "dom"],
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true
	},
	"include": ["index.ts", "src/**/*"],
	"exclude": ["node_modules", "**/__tests__/*"]
}
